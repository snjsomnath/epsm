# ==============================================
# EPSM Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# DJANGO SETTINGS
# ==============================================
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==============================================
# DATABASE SETTINGS
# ==============================================
DATABASE_URL=postgresql://postgres:epsm_password@db:5432/epsm_db
DB_NAME=epsm_db
DB_USER=postgres
DB_PASSWORD=epsm_password
DB_HOST=db
DB_PORT=5432

# ==============================================
# CORS SETTINGS
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ==============================================
# ENERGYPLUS SETTINGS
# ==============================================
ENERGYPLUS_DOCKER_IMAGE=nrel/energyplus:23.2.0
SIMULATION_TIMEOUT=600

# ==============================================
# FRONTEND SETTINGS
# ==============================================
VITE_API_BASE_URL=http://localhost:8000

# ==============================================
# FILE STORAGE
# ==============================================
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to False in production
DJANGO_DEBUG=True
# Set to appropriate log level
LOG_LEVEL=DEBUG