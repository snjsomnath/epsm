# EPSM Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# ================================
# Django Configuration
# ================================
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=CHANGE-THIS-TO-A-LONG-RANDOM-STRING-MIN-50-CHARS-GENERATE-WITH-PYTHON
DJANGO_DEBUG=False
ALLOWED_HOSTS=epsm.chalmers.se,epsm.ita.chalmers.se
CSRF_TRUSTED_ORIGINS=https://epsm.chalmers.se,https://epsm.ita.chalmers.se

# Optional: create an initial superuser automatically
# DJANGO_SUPERUSER_USERNAME=
# DJANGO_SUPERUSER_EMAIL=
# DJANGO_SUPERUSER_PASSWORD=

# ================================
# Database Configuration
# ================================
DB_NAME=epsm_db
DB_USER=epsm_user
DB_PASSWORD=CHANGE-THIS-SECURE-DATABASE-PASSWORD
DB_HOST=database
DB_PORT=5432

MATERIALS_DB_NAME=epsm_materials
MATERIALS_DB_USER=epsm_user
# Use the same password unless you provision a dedicated user
MATERIALS_DB_PASSWORD=CHANGE-THIS-SECURE-DATABASE-PASSWORD
MATERIALS_DB_HOST=database
MATERIALS_DB_PORT=5432

# Route simulation result models to the primary EPSM database by default.
# Override these if you provision a dedicated results database.
RESULTS_DB_NAME=epsm_db
RESULTS_DB_USER=epsm_user
RESULTS_DB_PASSWORD=CHANGE-THIS-SECURE-DATABASE-PASSWORD
RESULTS_DB_HOST=database
RESULTS_DB_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE-THIS-SECURE-REDIS-PASSWORD

# ================================
# SAML SSO Configuration
# ================================
# Obtain from Chalmers IT (Bj√∂rn)
SAML_IDP_METADATA_URL=https://idp.chalmers.se/idp/shibboleth

# ================================
# Email Configuration (Optional)
# ================================
EMAIL_HOST=smtp.chalmers.se
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@chalmers.se
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=epsm@chalmers.se

# ================================
# Docker Image Version
# ================================
VERSION=0.2.0

# ================================
# Frontend Build Configuration
# ================================
VITE_API_BASE_URL=https://epsm.chalmers.se
VITE_WS_URL=wss://epsm.chalmers.se/ws

# ================================
# Optional: Error Tracking
# ================================
SENTRY_DSN=

# ================================
# Optional: Backup Configuration
# ================================
BACKUP_DIR=/backups/epsm

# ================================
# Generate SECRET_KEY with:
# python3 -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# ================================
