# EPSM Production Environment Variables
# Copy this file to .env and fill in the actual values

# Required: Django Secret Key (generate a secure random string)
DJANGO_SECRET_KEY=your-very-long-random-secret-key-here

# Required: Database passwords (use strong passwords in production)
POSTGRES_PASSWORD=your-secure-postgres-password
RESULTS_DB_PASSWORD=your-secure-results-db-password

# Optional: Database configuration (defaults shown)
POSTGRES_DB=epsm_db
POSTGRES_USER=epsm_user
RESULTS_DB_NAME=epsm_results
RESULTS_DB_USER=epsm_results_user
RESULTS_DB_HOST=database
RESULTS_DB_PORT=5432

# Optional: Email configuration
EMAIL_HOST=smtp.chalmers.se
EMAIL_HOST_USER=your-email@chalmers.se
EMAIL_HOST_PASSWORD=your-email-password

# Optional: SAML configuration
SAML_IDP_METADATA_URL=https://www.ita.chalmers.se/idp.chalmers.se.xml

# Optional: Error tracking
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# Optional: Docker configuration
DOCKER_GID=299

# Optional: Redis password (leave empty for no password)
REDIS_PASSWORD=